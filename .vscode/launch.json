{
  "version": "2.0.0",
  "configurations": [
    {
      "name": "Debug Buffy",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/buffy",
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "make debug",
      "stopOnEntry": false,
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Debug Daggerset",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/buffy",
      "args": ["--daggerset"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "make debug",
      "stopOnEntry": false,
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Debug Buffy (with -f)",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/buffy",
      "args": ["-f", "fluoride.dat"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "make debug",
      "stopOnEntry": false,
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Debug Buffy Curses",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/buffy",
      "args": ["--curses"],
      "cwd": "${workspaceFolder}",
      "env": {
        "TERM": "xterm-256color"
      },
      "preLaunchTask": "make debug",
      "stopOnEntry": false,
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
